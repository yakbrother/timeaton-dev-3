---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  category: string;
  href: string;
  image?: string;
}

const { title, description, pubDate, author, category, href, image } = Astro.props;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group relative">
  <div class="aspect-video overflow-hidden rounded-lg mb-4">
    <img
      src={image || '/blog-placeholder.jpg'}
      alt=""
      class="h-full w-full object-cover object-center transition duration-300 group-hover:scale-105"
    />
  </div>
  <div class="space-y-2">
    <div class="space-y-1">
      <span class="text-sm text-mocha-500 dark:text-mocha-400">
        {category}
      </span>
      <h2 class="text-xl font-semibold tracking-tight text-mocha-800 dark:text-mocha-100">
        <a href={href} class="hover:underline">
          {title}
        </a>
      </h2>
      <p class="text-mocha-600 dark:text-mocha-300 line-clamp-2">
        {description}
      </p>
    </div>
    <div class="flex items-center justify-between text-sm">
      <span class="text-mocha-600 dark:text-mocha-400">{author}</span>
      <time class="text-mocha-500 dark:text-mocha-400">{formattedDate}</time>
    </div>
  </div>
  <a href={href} class="absolute inset-0">
    <span class="sr-only">Read more about {title}</span>
  </a>
</article>